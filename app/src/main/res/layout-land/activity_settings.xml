<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/sfondo"
        android:backgroundTint="@color/sfondo">

        <Button
            android:id="@+id/btnIndietro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@color/primario"
            android:backgroundTint="@color/primario"
            android:text="Indietro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <RadioGroup
            android:id="@+id/rgAudio"
            android:layout_width="172dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtAudio">

            <RadioButton
                android:id="@+id/rbVoci"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/variantePrimaria"
                android:checked="false"
                android:text="Voci"
                android:textColor="@color/black"
                android:textColorHighlight="@color/variantePrimaria"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbNotifica"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/variantePrimaria"
                android:text="Notifica"
                android:textColor="@color/black"
                android:textColorHighlight="@color/variantePrimaria"
                android:textSize="18sp" />

            <RadioButton
                android:id="@+id/rbSilenzioso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:buttonTint="@color/variantePrimaria"
                android:text="Silenzioso"
                android:textColor="@color/black"
                android:textColorHighlight="@color/variantePrimaria"
                android:textSize="18sp" />
        </RadioGroup>

        <TextView
            android:id="@+id/txtAudio"
            android:layout_width="157dp"
            android:layout_height="31dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="AUDIO"
            android:textAlignment="viewStart"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtImpostazioni" />

        <TextView
            android:id="@+id/txtImpostazioni"
            android:layout_width="197dp"
            android:layout_height="44dp"
            android:layout_marginTop="16dp"
            android:text="SETTINGS"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:popupTheme="@style/Theme.TimerPauseCalisthenics.PopupOverlay" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>